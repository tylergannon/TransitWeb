		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"svelte-email": "^0.0.4",
		"svelte-preprocess": "^4.10.7",
		"svelte-use-form": "^2.6.1",
		"tailwindcss": "^3.1.5",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"dependencies": {
		"@lucia-auth/adapter-mongoose": "^0.6.0",
		"@lucia-auth/adapter-session-redis": "^0.1.5",
