		"@next-auth/mongodb-adapter": "^1.1.1",
		"@redis/client": "^1.5.6",
		"bcrypt": "^5.1.0",
		"date-fns": "^2.29.3",
		"date-fns-tz": "^2.0.0",
		"dotenv": "^16.0.3",
		"lucia-auth": "^0.9.1",
		"mongodb": "^4.14.0",
		"mongoose": "^7.0.1",
		"nodemailer": "^6.9.1"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json,css}": [
			"prettier --write",
			"eslint --fix src/"
		]
	}
}
